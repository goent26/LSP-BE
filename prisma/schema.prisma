model Sertifikat {
  id               String      @id @default(uuid())
  pendaftaran_id   String      @unique
  nomor_sertifikat String      @unique
  tanggal_terbit   DateTime
  path_file        String?
  pendaftaran      Pendaftaran @relation(fields: [pendaftaran_id], references: [id])
}
